pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    parameters { 
       choice(name: 'CHOICES', choices: ['build', 'test'], description: 'Choose the phase') 
    }
    stages {
        stage('build') {
			when {
				environment name: 'CHOICE', value: 'build'
			}
            steps {
				echo "Executing build"
            }
        }

        stage('test') {
			when {
				environment name: 'CHOICE', value: 'test'
			}
            steps {
				echo "Executing test"                
            }
        }
    }
}